<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundimage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>


    <CheckBox
        android:id="@+id/idcbcricket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:checked="false"
        android:text="Cricket"
        android:textSize="20dp"
        />

    <CheckBox
        android:id="@+id/idcbtennis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:checked="false"
        android:text="Tennis"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/idcbfootball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:checked="false"
        android:text="Football"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/idcbgolf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:checked="false"
        android:text="Golf"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/idcbBasketball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:checked="false"
        android:text="Basketball"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/idcbVollyball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:checked="false"
        android:text="Vollyball"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/idcbBaseball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:checked="false"
        android:text="Baseball"
        android:textSize="20dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="submit" />


</LinearLayout>